### boutons : choix du mix energetique ----   
print("merci d'indiquer votre choix de mixenergetique")
listechoix<-c(
  "1 = 100% charbon",
  "2 = 100% gaz",
  "3 = 100% uranium",
  "4 = 50% charbon et 50% gaz",
  "5 = 33% gaz, 33% charbon, 33% uranium",
  "6 = 90 % uranium, 10% charbon"
)
print(listechoix)
choixmix <- readline(prompt="Veuillez choisir le numéro proposé")
### boutons : choix du mix energetique (fin input)----   

#validation mix energetique ----
choixmix <- as.integer(choixmix)
if(choixmix > 0 & choixmix <= 6) {
  if(choixmix == 1) {
    DF_mixenergetique <- data.frame(
      pourcentage_charbon = 1,
      pourcentage_gaz = 0,
      pourcentage_uranium = 0
    )
  } else if (choixmix == 2) {
    DF_mixenergetique <- data.frame(
      pourcentage_charbon = 0,
      pourcentage_gaz = 1,
      pourcentage_uranium = 0
    )
  } else if (choixmix == 3) {
    DF_mixenergetique <- data.frame(
      pourcentage_charbon = 0,
      pourcentage_gaz = 0,
      pourcentage_uranium = 1
    )
  } else if (choixmix == 4) {
    DF_mixenergetique <- data.frame(
      pourcentage_charbon = 0.5,
      pourcentage_gaz = 0.5,
      pourcentage_uranium = 0
    )
  } else if (choixmix == 5) {
    DF_mixenergetique <- data.frame(
      pourcentage_charbon = 0.33,
      pourcentage_gaz = 0.33,
      pourcentage_uranium = 0.33
    )
  } else if (choixmix == 6) {
    
    DF_mixenergetique <- data.frame(
      
      pourcentage_charbon = 0.1,
      
      pourcentage_gaz = 0,
      
      pourcentage_uranium = 0.9
      
    )
  }
} else {
  print("le choix du mix energetique n'a pas été enregistré, merci de recommencer en indiquant un chiffre entre 1 et 6")
}

#validation mix energetique (fin) ----


